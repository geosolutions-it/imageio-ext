<?xml version="1.0" encoding="UTF-8"?>
  <project xmlns="http://maven.apache.org/POM/4.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>it.geosolutions.imageio-ext</groupId>
    <artifactId>imageio-ext</artifactId>
    <version>1.3.3-SNAP</version>
  </parent>
  <groupId>it.geosolutions.imageio-ext</groupId>
  <artifactId>imageio-ext-plugin</artifactId>
  <packaging>pom</packaging>
  <version>1.3.3-SNAP</version>
  <name>GeoSolutions Image I/O-Extensions plugins</name>
  <description>
    Image I/O-Extensions plugin modules.
  </description>
  <dependencies>
    <dependency>
      <groupId>it.geosolutions.imageio-ext</groupId>
      <artifactId>imageio-ext-test-data</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <!-- =========================================================== -->
  <!--     Modules for the build in approximate dependency order   -->
  <!-- =========================================================== -->
  <profiles>
    <profile>
        <id>jmagick</id>
        <activation>
         <property><name>all</name></property>
        </activation>
        <modules>
           <module>jmagickjpeg</module>
        </modules>
    </profile>
    <profile>
      <id>base</id>
        <activation>
         <property><name>all</name></property>
        </activation>      
       <modules>
        <module>arcgrid</module>
        <module>tiff</module>
        <module>gdal</module>
        <module>cog</module>
      </modules>
    </profile>
	<profile>
      <id>png</id>
        <activation>
         <property><name>all</name></property>
        </activation>      
      <modules>
        <module>png</module>
      </modules>
    </profile>
    <profile>
      <id>nd</id>
        <activation>
         <property><name>all</name></property>
        </activation>      
      <modules>
        <module>unidata-netcdf</module>
      </modules>
    </profile> 
    <profile>
      <id>releasebuild</id>
      <activation>
         <property><name>all</name></property>
        </activation>      
      <modules>
        <module>kakadujp2</module>
        <module>arcgrid</module>
        <module>tiff</module>
        <module>gdal</module>
        <module>turbojpeg</module>
        <module>nitronitf</module>
	    <module>unidata-netcdf</module>
	    <module>png</module>
        <module>cog</module>
	</modules>
    </profile>
  </profiles>
</project>
